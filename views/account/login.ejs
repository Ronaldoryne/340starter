<% if (message && message.length > 0) { %>
  <div class="notice"><%= message[0] %></div>
<% } %>

<h1><%= title %></h1>

<form id="login-form" action="/account/login" method="post">
  <label for="account_email">Email</label>
  <input type="email" id="account_email" name="account_email" required placeholder="Enter your email">

  <label for="account_password">Password</label>
  <div class="password-requirements">
    Must be at least 12 characters, include an uppercase letter, a number, and a special character.
  </div>
  <input
    type="password"
    id="account_password"
    name="account_password"
    required
    placeholder="Your password..."
    pattern="^(?=.*\d)(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
  >

  <button type="submit">Login</button>
</form>

<p>Don't have an account? <a href="/account/register">Sign up</a></p>
