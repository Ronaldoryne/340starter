<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/nav', { nav: nav }) %>

  <main>
    <h1><%= title %></h1>

    <% if (errors && errors.length > 0) { %>
      <div class="errors">
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form id="updateForm" action="/inv/update/<%= inventory.inv_id %>" method="post">
      <input type="hidden" name="inv_id" value="<%= inventory.inv_id %>">

      <label for="inv_make">Make</label>
      <input type="text" id="inv_make" name="inv_make" required value="<%= inventory.inv_make %>">

      <label for="inv_model">Model</label>
      <input type="text" id="inv_model" name="inv_model" required value="<%= inventory.inv_model %>">

      <label for="inv_year">Year</label>
      <input type="number" id="inv_year" name="inv_year" required value="<%= inventory.inv_year %>">

      <label for="inv_description">Description</label>
      <textarea id="inv_description" name="inv_description" required><%= inventory.inv_description %></textarea>

      <label for="inv_image">Image Path</label>
      <input type="text" id="inv_image" name="inv_image" required value="<%= inventory.inv_image %>">

      <label for="inv_thumbnail">Thumbnail Path</label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= inventory.inv_thumbnail %>">

      <label for="inv_price">Price</label>
      <input type="number" id="inv_price" name="inv_price" required step="0.01" value="<%= inventory.inv_price %>">

      <label for="inv_miles">Miles</label>
      <input type="number" id="inv_miles" name="inv_miles" required value="<%= inventory.inv_miles %>">

      <label for="inv_color">Color</label>
      <input type="text" id="inv_color" name="inv_color" required value="<%= inventory.inv_color %>">

      <label for="classification_id">Classification</label>
      <%= classificationSelect %>

      <button type="submit">Update Inventory</button>
    </form>
  </main>

  <%- include('../partials/footer') %>
  <script src="/js/inv-update.js"></script>
</body>
</html>