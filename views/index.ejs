
    
<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>
    
    
    <main>
        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <h1>Welcome to CSE Motors!</h1>
                <div class="hero-content">
                    <div class="hero-text">
                        <div class="delorean-promo">
                            <h2>DMC Delorean</h2>
                            <ul class="features">
                                <li>3 Cup holders</li>
                                <li>Superman doors</li>
                                <li>Fuzzy dice!</li>
                            </ul>
                            <button class="own-today-btn">Own Today</button>
                        </div>
                    </div>
                    <div class="hero-image">
                        <img src="../images/vehicles/delorean.jpg" alt="DMC DeLorean with gull-wing doors" />
                    </div>
                </div>
            </div>
        </section>

        <!-- Reviews Section -->
        <section class="reviews">
            <div class="container">
                <h2>DMC Delorean Reviews</h2>
                <ul class="review-list">
                    <li>"So fast it's almost like traveling in time." (4/5)</li>
                    <li>"Coolest ride on the road." (4/5)</li>
                    <li>"I'm feeling McFly!" (5/5)</li>
                    <li>"The most futuristic ride of our day." (4.5/5)</li>
                    <li>"80's livin and I love it!" (5/5)</li>
                </ul>
            </div>
        </section>

        <!-- Upgrades Section -->
        <section class="upgrades">
            <div class="container">
                <h2>Delorean Upgrades</h2>
                <div class="upgrades-grid">
                    <div class="upgrade-item">
                        <img src="../images/upgrades/flux-cap.png" alt="Flux Capacitor" />
                        <p><a href="/upgrades/flux-capacitor">Flux Capacitor</a></p>
                    </div>
                    <div class="upgrade-item">
                        <img src="../images/upgrades/flame.jpg" alt="Flame Decals" />
                        <p><a href="/upgrades/flame-decals">Flame Decals</a></p>
                    </div>
                    <div class="upgrade-item">
                        <img src="../images/upgrades/bumper_sticker.jpg" alt="Bumper Stickers" />
                        <p><a href="/upgrades/bumper-stickers">Bumper Stickers</a></p>
                    </div>
                    <div class="upgrade-item">
                        <img src="../images/upgrades/hub-cap.jpg" alt="Hub Caps" />
                        <p><a href="/upgrades/hub-caps">Hub Caps</a></p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    
</body>
</html>
